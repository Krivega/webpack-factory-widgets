{
  "parser": "babel-eslint",
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true
    }],
    "no-console": "off",
    "strict": ["error", "global"],
    "curly": "warn",
    "object-shorthand": ["error", "always"]
  },
  "plugins": [
    "prettier"
  ]
}
